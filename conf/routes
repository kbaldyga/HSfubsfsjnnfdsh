# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /trades                      controllers.Trade.index
GET     /trades/:id                  controllers.Trade.get(id:Long)

GET     /contractors                 controllers.Contractor.index
GET     /contractors/:id             controllers.Contractor.get(id:Long)
GET     /contractors/:id/trades      controllers.Contractor.trades(id:Long)
POST    /contractors                 controllers.Contractor.post
POST    /contractors/:id/trades/:tradeId controllers.Contractor.postTrade(id:Long, tradeId:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
