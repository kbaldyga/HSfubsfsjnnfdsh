# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /trade                      controllers.Trade.index
GET     /trade/:id                  controllers.Trade.get(id:Long)

GET     /contractor                 controllers.Contractor.index
GET     /contractor/:id             controllers.Contractor.get(id:Long)
GET     /contractor/:id/trades      controllers.Contractor.trades(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
